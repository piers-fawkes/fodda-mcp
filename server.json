{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.piers-fawkes/fodda",
  "title": "Fodda Knowledge Graphs",
  "description": "Fodda MCP â€” Expert-curated trend intelligence graphs exposed as structured context for AI agents.",
  "version": "1.3.2",
  "repository": {
    "url": "https://github.com/piers-fawkes/fodda-mcp",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "npm",
      "identifier": "fodda-mcp",
      "version": "1.3.2",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "FODDA_API_KEY",
          "description": "Your Fodda API key",
          "isRequired": true,
          "isSecret": true
        },
        {
          "name": "FODDA_API_URL",
          "description": "Upstream Fodda API URL",
          "isRequired": false,
          "default": "https://api.fodda.ai"
        }
      ]
    }
  ]
}